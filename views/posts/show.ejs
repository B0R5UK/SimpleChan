<% include ../partials/header %>

<div class="jumbotron">



<div id="addnewcomment" class="hide">
    <form method="POST" action="/<%=boardname%>/<%=post.id%>/newcomment" enctype="multipart/form-data">
        <div class="form-group">    
            <input class="form-control" type="text" name="author" placeholder="Nickname">    
        </div>    	
        <div class="form-group">    
        	<p>Post image</p>
            <input type="file" class="form-control-file" name="commentimage">    
        </div>
        <div class="form-group">
            <textarea class="form-control" name="text" rows="3" placeholder="Post"></textarea>   
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-default btn-block">Send!</button>   
        </div>
    </form>
</div>
			
	<ul class="posts">
		<li class="post">
			<img class="postimg postimgmin" src="<%=post.image %>">
			<p class="postauthor"><%=post.author%></p>
			<p class="posttext"><%=post.text%>
			<p class="posttags">
				<a href=""><%=post.tag%></a>
			</p>
		</li>
	</ul>
	<ul class="comments">
		<% for(var i=0; i<post.comments.length ; i++) {%>
	    <li class="comment">
	        <img class="postimg postimgmin" src="<%=post.comments[i].image %>">
			<p class="postauthor"><%= post.comments[i].author %></p>
			<p class="commenttext"><%=post.comments[i].text%>
	    </li>
	    <% } %>
	</ul>
	
<button type="button" class="btn btn-outline-dark" data-placement="bottom" data-toggle="popover" data-title="Adding new comment" data-container="body" type="button" data-html="true" id="addnewcommentbutton">
	Add new comment!
</button>
	
</div>
<% include ../partials/popovers %>
<% include ../partials/footer %>



